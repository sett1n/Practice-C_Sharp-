<Window x:Class="Task_1.AboutApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1"
        mc:Ignorable="d"
        Title="AboutApp" Height="450" Width="800">
    <Grid x:Name="LayoutRoot" Background="White">
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBlock x:Name="textBlockInfo" Margin="40" Grid.Row="0"/>
    <Button x:Name="buttonClose" Content="Закрыть" FontSize="22" FontFamily="Roboto Bk" Width="200" Height="60" Grid.Row="1"/>
    </Grid>
</Window>
